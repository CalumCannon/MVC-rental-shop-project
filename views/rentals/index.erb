<h1>RENTALS</h1>
<a class="new-button" href="/rentals/new"><p>NEW RENTAL</p></a>
<table>
  <tr>
    <th>Customer </th>
    <th>Stock </th>
    <th>Rent Date</th>
    <th></th>
    <th>View</th>
  </tr>
  <% for rental in @rentals %>
  <% classtype = "none" %>

  <% case rental.get_type
   when "Game" %>
  <% classtype = "type-game"  %>
  <% when "Film" %>
  <% classtype = "type-film"  %>
  <% when "TV-Show" %>
  <% classtype = "type-tvshow"  %>
  <% end %>


  <tr class="<%= classtype %>">
    <td> <a href="/customers/<%=  rental.customer_id %>" > <%= Customer.find_by_id(rental.customer_id).name %> </a></td>
    <td> <a href="/stocks/<%= rental.stock_id %>" > <%= Stock.find_by_id(rental.stock_id).name %> </a></td>
    <td><%= rental.rent_date %></td>
    <td>
     <form action="/rentals/<%= rental.id %>/delete" method="POST">
      <input class="new-button" type="submit" value="DELETE " />
    </form>
    <a class="new-button" href="/rentals/<%= rental.id %>/restock">RETURN</a>
    </td>
    <td><a class="new-button" href="/rentals/<%= rental.id %>"><p>VIEW</p></a></td>
  </tr>
  <% end %>
</table>
