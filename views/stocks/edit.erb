<h1>EDIT STOCK</h1>

<form  action="/stocks/<%= @stock.id %>/edit" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= @stock.name %>">

  <label for="amount">Amount</label>
  <input type="number" name="amount" value="<%= @stock.amount %>">

  <label for="price">Price</label>
  <input type="number" name="price" value="<%= @stock.price %>">

  <input class="btn btn--action" type='submit' value="Update">
</form>
