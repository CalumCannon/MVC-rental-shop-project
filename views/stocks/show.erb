<h1>STOCK</h1>
<a class="new-button" href="/stocks/ <%= @stock.id %> /edit"><p>EDIT STOCK</p></a>

<form action="/stocks/<%= @stock.id %>/delete" method="POST">
  <input class="new-button" type="submit" value="DELETE" />
</form>

<table>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Price</th>
    <th>Image</th>
    <th>Type</th>
  </tr>
  <tr>
    <td><%= @stock.name %></td>
    <td><%= @stock.amount %></td>
    <td><%= @stock.price %></td>
    <td><%= @stock.image %></td>
    <td><%= @stock.type %></td>
  </tr>
</table>
